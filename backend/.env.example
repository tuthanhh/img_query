# Environment Configuration for Visual Search API

# Model Configuration
CLIP_MODEL_NAME=ViT-B/32
# Options: ViT-B/32, ViT-B/16, ViT-L/14, RN50, RN101, RN50x4, RN50x16, RN50x64
DEVICE=auto
# Options: auto, cuda, cpu

# Index Configuration
INDEX_TYPE=flat
# Options: flat, ivf
USE_GPU=true

# Data Paths
ARCHIVE_DIR=data/archive
TRAIN_DIR=data/train
TEST_DIR=data/test
INDEX_DIR=data/index

# Processing Configuration
BATCH_SIZE=32
NUM_WORKERS=4

# Search Configuration
DEFAULT_K=10
MAX_K=100

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
